<Window x:Class="Discordia.UI.RenameMovieWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RenameMovieWindow" Height="300" Width="300" ShowInTaskbar="False" ResizeMode="NoResize" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Rename" TextAlignment="Center" FontSize="24" TextWrapping="Wrap"></TextBlock>
        <TextBox Grid.Row="1" Grid.ColumnSpan="2" Name="textBoxOriginalName"></TextBox>
        <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Text="To" TextAlignment="Center" FontSize="24" TextWrapping="Wrap"></TextBlock>
        <TextBox Grid.Row="3" Grid.ColumnSpan="2" Name="textBoxNewName"></TextBox>
        <Button Grid.Row="4" Grid.Column="0" Width="60" Height="25" Name="buttonCancel" Click="buttonCancel_Click">Cancel</Button>
        <Button Grid.Row="4" Grid.Column="1" Width="60" Height="25" Name="buttonRename" Click="buttonRename_Click">Rename</Button>
    </Grid>
</Window>
