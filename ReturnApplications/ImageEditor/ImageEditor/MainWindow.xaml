<Window x:Class="ImageEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Editor" Height="388" Width="384" WindowStartupLocation="CenterScreen"
        >
    <Grid>
        <Image Name="ImageMain" Margin="10,10,10,46"/>
        <Button Name="ButtonCrop" Content="Crop" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="75" Click="ButtonCrop_Click"/>
        <Button Name="ButtonLoadImage" Content="Load Image" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" BorderBrush="#FF707070" Click="ButtonLoadImage_Click"/>
    </Grid>
</Window>
