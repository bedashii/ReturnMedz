        <Button Name="ButtonNotPosted" HorizontalAlignment="Left" Margin="602,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" IsEnabled="False">
            <Image Name="ButtonNotPostedImage" Height="64" Width="64"/>
        </Button>
        <Button Name="ButtonSelectAll" HorizontalAlignment="Left" Margin="682,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" IsEnabled="False" MouseDown="ButtonSelect_MouseDown">
            <Image Name="ButtonSelectAllImage" Height="64" Width="64" MouseDown="ButtonSelect_MouseDown"/>
        </Button>
        <Button Name="ButtonSelectNone" HorizontalAlignment="Left" Margin="760,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" MouseDown="ButtonSelect_MouseDown">
            <Image Name="ButtonSelectNoneImage" Height="64" Width="64" MouseDown="ButtonSelect_MouseDown" />
        </Button>
        <Button x:Name="ButtonCleanUp" HorizontalAlignment="Left" Margin="843,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" MouseDown="ButtonCleanUp_MouseDown" Visibility="Visible">
            <Image x:Name="ButtonCleanUpImage" Height="64" Width="64" MouseDown="ButtonCleanUp_MouseDown"/>
        </Button>
        <UIControls:UIInfoDisplay x:Name="InfoDisplayControl" Margin="924,10,30,0" VerticalAlignment="Top" Width="Auto" Height="80"/>
    </Grid>
</Controls:MetroWindow>