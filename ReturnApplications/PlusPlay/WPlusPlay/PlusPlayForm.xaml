                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Accents/BaseLight.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Controls:MetroWindow.Resources>

    <Grid>
        <UIControls:UIListBoxDouble x:Name="ListBoxModelGallerySelection" HorizontalAlignment="Left" Width="225" Margin="10,10,0,30" ListBoxMain_Set="ListBoxModelGallerySelection_ListBoxMain_Set" ListBoxSub_Set="ListBoxModelGallerySelection_ListBoxSub_Set" SubListBox_SelectedValueChanged="ListBoxModelGallerySelection_SubListBox_SelectedValueChanged" BorderBrush="Black" BorderThickness="0" MainListBox_SelectedValueChanged="ListBoxModelGallerySelection_MainListBox_SelectedValueChanged"/>
        <Border BorderBrush="LightGray" BorderThickness="3,3,1,1" Margin="265,122,30,30" CornerRadius="8,8,8,8">
            <Grid>
                <UIControls:UIPicturePanel x:Name="PicturePanelMain" Margin="20,20,10,10"/>
            </Grid>
        </Border>
        <Button Name="ButtonImport"  HorizontalAlignment="Left" Margin="266,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" MouseDown="ButtonImport_MouseDown">
            <Image Name="ButtonImportImage" Height="64" Width="64" MouseDown="ButtonImport_MouseDown"></Image>
        </Button>
        <Button Name="ButtonSave" HorizontalAlignment="Left" Margin="356,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" IsEnabled="False" MouseDown="ButtonSave_MouseDown">
            <Image Name="ButtonSaveImage" Height="64" Width="64" MouseDown="ButtonSave_MouseDown"></Image>
        </Button>
        <Button Name="ButtonDiscard" HorizontalAlignment="Left" Margin="436,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" IsEnabled="False" MouseDown="ButtonDiscard_MouseDown">
            <Image Name="ButtonDiscardImage" Height="64" Width="64" MouseDown="ButtonDiscard_MouseDown" ></Image>
        </Button>
        <Button Name="ButtonPosted" HorizontalAlignment="Left" Margin="522,26,0,0" VerticalAlignment="Top" Width="64" Height="64" Padding="0" IsEnabled="False">
